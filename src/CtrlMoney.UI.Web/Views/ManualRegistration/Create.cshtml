@model CtrlMoney.UI.Web.Models.TicketConversionVM
@{
    ViewData["Title"] = "TicketConversion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Ticket Conversion</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Ticket Conversion</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Quick Example</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
               <form asp-action="Create" asp-controller="ManualRegistration" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(model => model.TicketConversionId)
                <div class="card-body">
                  <div class="form-group">
                    <label for="idTicketInput">TicketInput</label>
                    <input asp-for="TicketInput" type="text" class="form-control" id="idTicketInput" placeholder="TicketInput">
                  </div>
                  <div class="form-group">
                    <label for="idTicketOutput">TicketOutput</label>
                    <input asp-for="TicketOutput" type="text" class="form-control" id="idTicketOutput" placeholder="TicketOutput">
                  </div>
                  <div class="form-group">
                    <label for="idStockBroker">StockBroker</label>
                    <input asp-for="StockBroker" type="text" class="form-control" id="idStockBroker" placeholder="StockBroker">
                  </div>
                  <div class="form-group">
                    <label for="idQuantity">Quantity</label>
                    <input asp-for="Quantity" type="text" class="form-control" id="idQuantity" placeholder="Quantity">
                  </div>
                  <div class="form-group">
                    <label for="idUnitPrice">UnitPrice</label>
                    <input asp-for="UnitPrice" type="text" class="form-control" id="idUnitPrice" placeholder="UnitPrice">
                  </div>
                  <div class="form-group">
                    <label for="idDate">Date</label>
                    <input asp-for="Date" type="date" class="form-control" id="idDate" placeholder="mm/dd/yyyy">
                  </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
          </div>
          <!--/.col (left) -->
        </div>
        <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- bs-custom-file-input -->
<script src="~/lib/bs-custom-file-input/bs-custom-file-input.min.js"></script>

<script>
    $(function() {
        bsCustomFileInput.init();
    });
</script>