
@{
    ViewData["Title"] = "Conversions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Conversions</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Conversions</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Your conversions</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="tbConversions" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>TicketInput</th>
                                        <th>TicketOutput</th>
                                        <th>StockBroker</th>
                                        <th>Quantity</th>
                                        <th>UnitPrice</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                 
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script type="text/javascript">

    function loadTableConversions() {
        $('#tbConversions').dataTable({
            "sAjaxSource": '/ManualRegistration/GetAjaxHandlerConversions',
            "bProcessing": true,
            "bServerSide": false,
            "paginate": true,
            "bDestroy": true,
            "aoColumns": [
                {
                    "mData": "TicketInput",
                    "bSortable": true,
                    "defaultContent": "<i>TicketInput</i>",
                },
                {
                    "mData": "TicketOutput",
                    "bSortable": true,
                    "defaultContent": "<i>TicketOutput</i>",
                },
                {
                    "mData": "StockBroker",
                    "bSortable": true,
                    "defaultContent": "<i>StockBroker</i>",
                },
                {
                    "mData": "Quantity",
                    "bSortable": true,
                    "defaultContent": "<i>Quantity</i>",
                },
                {
                    "mData": "UnitPrice",
                    "bSortable": true,
                    "defaultContent": "<i>UnitPrice</i>",
                },
                {
                    "mData": "Date",
                    "bSortable": true,
                    "defaultContent": "<i>Date</i>",
                }           
            ]
        });
    }
    jQuery(document).ready(function() {
        loadTableConversions();
    });
</script>