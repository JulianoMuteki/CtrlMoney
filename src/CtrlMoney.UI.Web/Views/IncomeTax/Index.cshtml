@{
    ViewData["Title"] = "Index Income Tax";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Advanced Form</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Income Tax</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Your historical</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="tbIncomesTaxes" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>TicketCode</th>                                       
                                        <th>LastDate</th>
                                        <th>LastTotalValue</th>
                                        <th>CurrentDate</th>
                                        <th>CurrentTotalValue</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                 
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script type="text/javascript">

    function loadTableIncomesTaxes() {
        $('#tbIncomesTaxes').dataTable({
            "sAjaxSource": '/IncomeTax/GetAjaxHandlerIncomesTaxes',
            "bProcessing": true,
            "bServerSide": false,
            "paginate": true,
            "bDestroy": true,
            "aoColumns": [
                {
                    "mData": "TicketCode",
                    "bSortable": true,
                    "defaultContent": "<i>TicketCode</i>",
                },
                {
                    "mData": "LastDate",
                    "bSortable": true,
                    "defaultContent": "<i>LastDate</i>",
                },
                {
                    "mData": "LastTotalValue",
                    "bSortable": true,
                    "defaultContent": "<i>LastTotalValue</i>",
                },
                {
                    "mData": "CurrentDate",
                    "bSortable": true,
                    "defaultContent": "<i>CurrentDate</i>",
                },
                {
                    "mData": "CurrentTotalValue",
                    "bSortable": true,
                    "defaultContent": "<i>CurrentTotalValue</i>",
                }
               
            ]
        });
    }
    jQuery(document).ready(function() {
        loadTableIncomesTaxes();
    });
</script>