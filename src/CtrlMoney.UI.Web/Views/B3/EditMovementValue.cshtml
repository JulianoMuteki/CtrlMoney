@model CtrlMoney.UI.Web.Models.MovementVM
@{
    ViewData["Title"] = "Movement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Upload Transaction</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Upload Transaction</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Quick Example</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
               <form asp-action="EditMovementValue" asp-controller="B3" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(model => model.TicketId)
                <div class="card-body">
                  <div class="form-group">
                    <label for="idTicketCode">TicketCode</label>
                    <input type="text" class="form-control" id="idTicketCode" placeholder="@Model.TicketCode" disabled="">
                  </div>
                  <div class="form-group">
                    <label for="inputOutput">InputOutput</label>
                    <input type="text" class="form-control" id="inputOutput" placeholder="@Model.InputOutput" disabled="">
                  </div>
                  <div class="form-group">
                    <label for="idDate">Date</label>
                    <input type="text" class="form-control" id="idDate" placeholder="@Model.Date" disabled="">
                  </div>
                  <div class="form-group">
                    <label for="idMovimentType">MovimentType</label>
                    <input type="text" class="form-control" id="idMovimentType" placeholder="@Model.MovimentType" disabled="">
                  </div>
                  <div class="form-group">
                    <label for="idQuantity">Quantity</label>
                    <input asp-for="Quantity" type="text" class="form-control" id="idQuantity" placeholder="Quantity">
                  </div>
                  <div class="form-group">
                    <label for="idUnitPrice">UnitPrice</label>
                    <input asp-for="UnitPrice" type="text" class="form-control" id="idUnitPrice" placeholder="UnitPrice">
                  </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
          </div>
          <!--/.col (left) -->
        </div>
        <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- bs-custom-file-input -->
<script src="~/lib/bs-custom-file-input/bs-custom-file-input.min.js"></script>

<script>
    $(function() {
        bsCustomFileInput.init();
    });
</script>