
@{
    ViewData["Title"] = "IncomeTaxReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Income Tax</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Income Tax</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Report</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Categoria</label>
                                        <select id="categoryList" class="form-control select2" style="width: 100%;">
                                            <option selected="selected">Ações</option>
                                            <option>Fundos imobiliários</option>
                                            <option>ETF</option>                                           
                                        </select>
                                    </div>
                                    <!-- /.form-group -->
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                                <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ano-calendário</label>
                                        <select id="yearsList" class="form-control select2" style="width: 100%;">
                                            <option selected="selected">2022</option>
                                            <option>2021</option>
                                            <option>2020</option>
                                            <option>2019</option>
                                        </select>
                                    </div>
                                    <!-- /.form-group -->
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                        </div>
                        <div class="card-body">
                            <table id="tbIncomesTaxes" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>TicketCode</th>
                                        <th>LastDate</th>
                                        <th>LastTotalValue</th>
                                        <th>LastQuantity</th>
                                        <th>CurrentDate</th>
                                        <th>CurrentTotalValue</th>
                                        <th>CuurentQuantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script type="text/javascript">
    var table;

    /* Formatting function for row details - modify as you need */
    function format(d) {
        // `d` is the original data object for the row
        return (
            '<table cellpadding="5" cellspacing="0" border="0" style="padding-left:50px;">' +
            '<tr>' +
            '<td>Full name:</td>' +
            '<td>' +
            d.name +
            '</td>' +
            '</tr>' +
            '<tr>' +
            '<td>Extension number:</td>' +
            '<td>' +
            d.extn +
            '</td>' +
            '</tr>' +
            '<tr>' +
            '<td>Extra info:</td>' +
            '<td>And any further details here (images etc)...</td>' +
            '</tr>' +
            '</table>'
        );
    }

    function getDiv() {
        return "<div></div>";
    }

    function loadTableIncomesTaxes(year, category) {
        var url = '@Url.Content("~/StatusInvest/GetAjaxHandlerIncomesTaxes")?year=' + year + '&category=' + category;

        table = $('#tbIncomesTaxes').DataTable({
            "sAjaxSource": url,
            "bProcessing": true,
            "bServerSide": false,
            "paginate": true,
            "bDestroy": true,
            "aoColumns": [
                {
                    "mData": null,
                    "className": 'dt-control',
                    "defaultContent": '<i class="fas fa-plus-circle"></i>'
                },
                {
                    "mData": "TicketCode",
                    "bSortable": true,
                    "defaultContent": "<i>TicketCode</i>",
                },
                {
                    "mData": "LastDate",
                    "bSortable": true,
                    "defaultContent": "<i>LastDate</i>",
                },
                {
                    "mData": "LastTotalValue",
                    "bSortable": true,
                    "defaultContent": "<i>LastTotalValue</i>",
                },
                {
                    "mData": "LastQuantity",
                    "bSortable": true,
                    "defaultContent": "<i>LastQuantity</i>",
                },
                {
                    "mData": "CurrentDate",
                    "bSortable": true,
                    "defaultContent": "<i>CurrentDate</i>",
                },
                {
                    "mData": "CurrentTotalValue",
                    "bSortable": true,
                    "defaultContent": "<i>CurrentTotalValue</i>",
                },
                {
                    "mData": "CurrentQuantity",
                    "bSortable": true,
                    "defaultContent": "<i>CurrentQuantity</i>",
                }
            ]
        });
    }

    jQuery(document).ready(function() {

        // Add event listener for opening and closing details
        $('#tbIncomesTaxes tbody').on('click', 'td.dt-control', function() {
            var tr = $(this).closest('tr');
            var row = table.row(tr);
            var ticket = row.data().TicketCode;
            var year = $('option:selected', $("#yearsList")).text();

            if (row.child.isShown()) {
                // This row is already open - close it
                row.child.hide();
                tr.removeClass('shown');
            } else {
                // Open this row

                var url = '@Url.Action("Details","StatusInvest")?ticketCode=' + ticket + '&year=' + year;

                $.get(url, function(data) {
                    row.child(data).show();
                });

                tr.addClass('shown');

            }
        });

        loadTableIncomesTaxes($('option:selected', $("#yearsList")).text(), $('option:selected', $("#categoryList")).text());

        $("#yearsList").change(function() {          
            loadTableIncomesTaxes($('option:selected', this).text(), $('option:selected', $("#categoryList")).text());
        });
        
        $("#categoryList").change(function () {
            loadTableIncomesTaxes($('option:selected', $("#yearsList")).text(), $('option:selected', this).text());
        });
    });
</script>